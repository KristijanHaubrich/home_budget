<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="unique_keys" author="superuser" context="home_budget">
        <addUniqueConstraint
                columnNames="email"
                constraintName="email_users"
                deferrable="true"
                disabled="true"
                initiallyDeferred="true"
                schemaName="public"
                tableName="users"
        />
        <addUniqueConstraint
                columnNames="super_pin"
                constraintName="pin_super_users"
                deferrable="true"
                disabled="true"
                initiallyDeferred="true"
                schemaName="public"
                tableName="super_users"
        />
        <addUniqueConstraint
                columnNames="name"
                constraintName="name_category"
                deferrable="true"
                disabled="true"
                initiallyDeferred="true"
                schemaName="public"
                tableName="categories"
        />

        <addUniqueConstraint
                columnNames="name"
                constraintName="name_role"
                deferrable="true"
                disabled="true"
                initiallyDeferred="true"
                schemaName="public"
                tableName="roles"
        />
    </changeSet>

</databaseChangeLog>